{
  "name": "heat-libs",
  "version": "0.5.0",
  "description": "HEAT external libraries for use in Node.js and any (modern) browser",
  "keywords": [
    "heat-libs"
  ],
  "main": "./dist/heat-libs",
  "browser": "./dist/heat-libs.umd.js",
  "files": [
    "dist"
  ],
  "author": "Dennis de Klerk <dennis@heatledger.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Heat-Ledger-Ltd/heat-libs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "browserify src/index.js --standalone heat-libs -o compiled/bundle.js && rollup -c && rimraf compiled",
    "start": "rollup -c -w",
    "rollup": "rollup -c"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "lodash.camelcase": "^4.3.0",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.3.10"
  },
  "dependencies": {
    "@iota/core": "^1.0.0-beta.12",
    "bip39": "2.5.0",
    "bitcore-lib": "0.15.0",
    "eth-lightwallet": "3.0.1",
    "hooked-web3-provider": "1.0.0",
    "nxt-crypto": "^1.3.1",
    "web3": "0.15.1"
  },
  "optionalDependencies": {
    "bufferutil": "^3.0.2",
    "utf-8-validate": "^3.0.3"
  }
}
